@{Game game = ViewData["Game"] as Game; }

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Игровая страница</title>
    <link rel="stylesheet" href="~/css/Styles.css" />
    <meta charset="utf-8" lang="ru" />
    <style></style>
</head>
<body>
    <main>
        <div class="Container">
            <p>@game.CurrentUserName</p>
            @*<a asp-area="" asp-controller="Result" asp-action="GameOver">Результат</a>*@
            <form asp-area="" asp-controller="Game" asp-action="Index" method="post">
                <input type="range" name="nextstep" min="1" max=@(game.MaxStep-1) value=@(game.MaxStep/2) onchange="document.getElementById('stepvalue').innerHTML = this.value;" />
                <div id="stepvalue">@(game.MaxStep/2)</div>
                <input type="submit" />
            </form>
            <p>Текущий счет @(game.Count)</p>
            <div class="game-example">
                @{
                    if(game != null)
                    for (int i = 0; i < game.Count; i++)
                    {
                    <div class="game-item"></div>

                    }
                }
            </div>
        </div>
    </main>
</body>
</html>
@{
}
